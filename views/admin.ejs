<%- contentFor('page') %>

<% if (!locals.user) { %>
<p>You should not be here.</p>
<% } else { %>
<% if (user.status === 'Anonymous') { %>
<p>Only exclusive-members can become admins.</p>
<% } else if (user.status ==='Exclusive Member') { %>
<% if (!locals.errors) { %>
<form method="post">
  <div class="form-group">
    <label for="adminPassword">Admin password:</label>
    <input
      type="password"
      class="form-control"
      id="adminPassword"
      name="adminPassword"
      required
    />
    <button type="submit" class="form-submit">Submit</button>
  </div>
</form>
<% } else { %>
  <div class="gen-container">
    <p>You don't know the password, you have no reason to be here.</p>
  </div>
<%- include('./partials/errors_list') %>
<% } %>
<% } else { %>
  <div class="gen-container">
    <p>Remember, with great power comes great responsibility.</p>
    <p>You can delete posts now but it doesn't mean that you have to.</p>
  </div>
<% } %>
<% } %>
